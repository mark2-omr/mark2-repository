<div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to root_path do %>
          <i class="bi bi-house-door"></i>
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Surveys", surveys_path %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        <%= @survey.name %>
      </li>
    </ol>
  </nav>
</div>

<%= render @survey %>

<div class="d-flex flex-wrap flex-md-nowrap mb-3">
  <%= link_to download_file_survey_path(@survey), class: "btn btn-primary" do %>
    <i class="bi bi-download"></i> Excel
  <% end %>
  <%= link_to download_payload_survey_path(@survey), class: "btn btn-primary" do %>
    <i class="bi bi-download"></i> JSON
  <% end %>
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap">
  <%= link_to edit_survey_path(@survey), class: "btn btn-warning" do %>
    <i class="bi bi-pencil"></i> Edit
  <% end %>

  <%= button_to @survey, method: :delete, class: "btn btn-danger",
    data: { turbo_confirm: 'Are you sure?' } do %>
    <i class="bi bi-trash"></i> Delete
  <% end %>
</div>
